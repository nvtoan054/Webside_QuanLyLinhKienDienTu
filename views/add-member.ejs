<% include partials/header.ejs %>
<h1></h1>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="ho_ten" id="ho-ten" placeholder="Họ Và Tên" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="dia_chi" id="dia-chi" placeholder="Địa Chỉ" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="vi_tri" id="vi-tri" placeholder="Vị Trí" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="dien_thoai" id="dien-thoai" placeholder="Số Điện Thoại" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="user" id="user" placeholder="Users" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="pass" id="pass" placeholder="PassWord" required>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <label for="player-img"><b>Ảnh Đại Diện</label><br>
                    <input type="file" name="avt" id="player-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Thêm Thành Viên</button>
        </form>
    </div>
</div>
</body>
</html>
