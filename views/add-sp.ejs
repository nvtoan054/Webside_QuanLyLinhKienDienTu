<% include partials/header.ejs %>
<h1></h1>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="ten_sp" id="ten-sp" placeholder="Tên Sản Phẩm" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="ton_kho" id="ton-kho" placeholder="Tồn Kho" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="gia" id="gia" placeholder="Giá" required>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <label for="player-img"><b>Ảnh Sản phẩm</label><br>
                    <input type="file" name="image" id="player-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Thêm Sản Phẩm</button>
        </form>
    </div>
</div>
</body>
</html>
