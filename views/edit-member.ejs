<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (player) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="ho-ten">Họ Và Tên</label>
                    <input type="text" class="form-control" name="ho_ten" id="ho-ten" value="<%= player.ho_ten %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="dia-chi">Địa Chỉ Mới</label>
                    <input type="text" class="form-control" name="dia_chi" id="dia-chi" value="<%= player.dia_chi %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="vi-tri">Vị Trí Mới</label>
                    <input type="text" class="form-control" name="vi_tri" id="vi-tri" value="<%= player.vi_tri %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="dien-thoai">Số Điện Thoại Mới</label>
                    <input type="text" class="form-control" name="dien_thoai" id="dien-thoai" value="<%= player.dien_thoai %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update</button>
        </form>
    <% } else { %>
        <p class="text-center">Chưa Có Thành Viên Nào<a href="/addmb">Thêm</a> Thành Viên Ở Đây</p>
    <% } %>
</div>
</div>
</body>
</html>
<% include foolter.ejs %>